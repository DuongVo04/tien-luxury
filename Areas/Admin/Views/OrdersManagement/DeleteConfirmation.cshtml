@{
    Layout = null;
}

<style>
    /* Thêm các animation mới */
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeOut {
        from {
            opacity: 1;
        }

        to {
            opacity: 0;
        }
    }

    @@keyframes slideDown {
        from {
            opacity: 1;
            transform: translateY(0);
        }

        to {
            opacity: 0;
            transform: translateY(20px);
        }
    }

    .modal-overlay.fade-out {
        animation: fadeOut 0.3s ease-out forwards;
    }

    .confirmation-modal.fade-out {
        animation: slideDown 0.3s ease-out forwards;
    }

    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        opacity: 0;
        animation: fadeIn 0.3s ease-out forwards;
    }

    .confirmation-modal {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 25px;
        width: 30%;
        text-align: center;
        opacity: 0;
        transform: translateY(20px);
        animation: slideUp 0.3s ease-out 0.1s forwards;
    }

    /* Các style cũ giữ nguyên */
    .confirmation-modal h2 {
        margin-top: 0;
        color: #333;
    }

    .confirmation-message {
        margin: 20px 0;
        color: #555;
        line-height: 1.5;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

    .confirm-btn {
        background-color: #e74c3c;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .confirm-btn:hover {
        background-color: #c0392b;
    }

    .cancel-btn {
        background-color: #ecf0f1;
        color: #333;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .cancel-btn:hover {
        background-color: #bdc3c7;
    }

    .warning-icon {
        color: #e74c3c;
        font-size: 40px;
        margin-bottom: 15px;
    }
</style>

<div class="modal-overlay" id="deleteConfirmationModal">

    <div class="confirmation-modal">
        <div class="warning-icon">⚠️</div>
        <h2>Xác nhận xóa đơn hàng</h2>
        <div class="confirmation-message">
            Bạn có chắc chắn muốn xóa đơn hàng này không? </br>
            Hành động này không thể hoàn tác.
        </div>
        <div class="button-group">
            <button type="button" class="cancel-btn">Hủy bỏ</button>
            <button type="button" class="confirm-btn">Xóa đơn hàng</button>
        </div>
    </div>
</div>