@{
    ViewData["Title"] = "Login page";
    Layout = null;
}

@model AdminAccountViewModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin-style/login-style.css">
</head>
<body>
    <div class="text-center">
        <h1>Hair salon</h1>
        <h2>Trang quản lý</h2>
    </div>
    
    <div class="login-container">

        <h3 class="text-center mb-4">Đăng nhập Admin</h3>

        <form method="post" asp-controller="Login" asp-action="Index">

            <div class="mb-3">
                <label asp-for="AdminAccount.Username" class="form-label">Tên đăng nhập</label>
                <input asp-for="AdminAccount.Username" type="text" class="form-control" placeholder="Nhập tên đăng nhập" value="admin">
                <span asp-validation-for="AdminAccount.Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AdminAccount.Password" class="form-label">Mật khẩu</label>
                <input asp-for="AdminAccount.Password" type="password" class="form-control" placeholder="Nhập mật khẩu" value="1234512345">
                <span asp-validation-for="AdminAccount.Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-custom w-80">Đăng nhập</button>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <p class="text-center mt-3 mb-1" style="color: indianred;">@ViewBag.ErrorMessage</p>
            }

        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
