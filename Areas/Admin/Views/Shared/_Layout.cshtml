<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HairSalonWeb Admin</title>

    <link rel="icon" href="~/logo.png" type="image/x-icon">

    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <link href="~/css/admin-style/admin-style.css" rel="stylesheet" />
</head>

<body>
    <div class="sidebar" id="sidebar">
        <div class="logo-container">
            <i class="fas fa-laptop-code" style="color: var(--accent-color);"></i>
            <div class="logo">AdminPanel</div>
        </div>
        <button class="toggle-btn" id="toggle-btn"><i class="fas fa-chevron-right"></i></button>
        <div class="sidebar-menu">
            <a href="@Url.Action("Index", "Home")"><i class="fa-solid fa-gauge"></i><span>Dashboard</span></a>
            <a href="@Url.Action("ServicesManagement", "Home")"><i class="fa-solid fa-cogs"></i><span>Manage
                    Services</span></a>
            <a href="@Url.Action("ProductsManagement", "Home")"><i class="fa-solid fa-box"></i><span>Manage Products
                </span></a>
            <a href="@Url.Action("OrdersManagement", "Home")"><i class="fa-solid fa-cart-shopping"></i><span>Manage
                    Orders
                </span></a>
            <a href="@Url.Action("ReservationsManagement", "Home")"><i
                    class="fa-solid fa-calendar-check"></i><span>Manage Appointments
                </span></a>
            <a href="@Url.Action("EmployeesManagement", "Home")"><i class="fa-solid fa-users"></i><span>Manage
                    Employees</span></a>
            <a href="#settings" class="settings-btn"><i class="fa-solid fa-gear"></i><span>Settings</span></a>
            <div class="submenu" id="settings-submenu">
                <a href="#profile"><i class="fa-solid fa-user"></i><span>Profile</span></a>
                <a href="" id="changePasswordBtn"><i class="fa-solid fa-key"></i><span>Change Password</span></a>
                <a href="@Url.Action("Logout", "Home")"><i
                        class="fa-solid fa-right-from-bracket"></i><span>Logout</span></a>
            </div>
        </div>
    </div>

    <div class="content" id="content">
        @RenderBody()
    </div>

    <div class="custome-form-container" id="changePasswordFormContainer"
        style="position: fixed; z-index: 1050; top: 0; left: 0; width: 100%; height: 100%; display: none; background-color: rgba(0,0,0,0.5); overflow-y: auto;">
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.tiny.cloud/1/3gix8x7lhen7qst2a159hpi01tabhuf09o1ndsrp9i2ggpo3/tinymce/7/tinymce.min.js"
        referrerpolicy="origin"></script>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin-script/admin-index-script.js"></script>
    <script src="~/js/admin-script/show-change-password-script.js"></script>
    <script src="~/js/admin-script/service-management-script.js"></script>
    <script src="~/js/admin-script/product-management-script.js"></script>
    <script src="~/js/admin-script/reservation-management-script.js"></script>
    <script src="~/js/admin-script/employee-management-script.js"></script>
    <script src="~/js/admin-script/check-validation-product.js"></script>

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: [
                // Core editing features
                'anchor', 'autolink', 'charmap', 'codesample', 'emoticons', 'image', 'link', 'lists', 'media', 'searchreplace', 'table', 'visualblocks', 'wordcount',
                // Your account includes a free trial of TinyMCE premium features
                // Try the most popular premium features until Apr 5, 2025:
                'checklist', 'mediaembed', 'casechange', 'export', 'formatpainter', 'pageembed', 'a11ychecker', 'tinymcespellchecker', 'permanentpen', 'powerpaste', 'advtable', 'advcode', 'editimage', 'advtemplate', 'ai', 'mentions', 'tinycomments', 'tableofcontents', 'footnotes', 'mergetags', 'autocorrect', 'typography', 'inlinecss', 'markdown', 'importword', 'exportword', 'exportpdf'
            ],
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
            mergetags_list: [
                { value: 'First.Name', title: 'First Name' },
                { value: 'Email', title: 'Email' },
            ],
            ai_request: (request, respondWith) => respondWith.string(() => Promise.reject('See docs to implement AI Assistant')),
        });
    </script>

</body>

</html>